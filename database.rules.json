{
  "rules": {
    "archive": {
      ".read": true,
      ".write": false
    },
    "blog": {
      "categories": {
        ".read": true,
        ".write": false
      },
      "postings": {
        ".read": true,
        ".write": "auth.uid === 'MFgm06l3FVe37AE8Vv5Q24D8jZr2'",
        "$postingId": {
          ".write": "data.val() === null",
          ".validate": "newData.hasChildren(['postingId', 'posted', 'title', 'content', 'allowReplies', 'categoryIds', 'tagIds'])",
          "postingId": {
            ".validate": "newData.isNumber()"
          },
          "posted": {
            ".validate": "newData.val().matches(/^\\d{4}\\-\\d{2}\\-\\d{2} \\d{2}:\\d{2}:\\d{2}$/)"
          },
          "title": {
            ".validate": "newData.isString() && newData.val().length > 0"
          },
          "content": {
            ".validate": "newData.isString() && newData.val().length > 0"
          },
          "allowReplies": {
            ".validate": "newData.isBoolean()"
          },
          "categoryIds": {
            ".validate": "newData.val() !== null"
          },
          "tagIds": {
            ".validate": "newData.val() !== null"
          }
        }
      },
      "replies": {
        ".read": true,
        ".write": false,
        "$replyId": {
          ".write": "data.val() === null",
          ".validate": "newData.hasChildren(['replyId', 'postingId', 'posted', 'poster', 'content', 'address'])",
          "replyId": {
            ".validate": "newData.isNumber()"
          },
          "postingId": {
            ".validate": "newData.isNumber()"
          },
          "posted": {
            ".validate": "newData.val().matches(/^\\d{4}\\-\\d{2}\\-\\d{2} \\d{2}:\\d{2}:\\d{2}$/)"
          },
          "poster": {
            ".validate": "newData.isString() && newData.val().length > 0"
          },
          "content": {
            ".validate": "newData.isString() && newData.val().length > 0"
          },
          "address": {
            ".validate": "newData.val().matches(/^([0-9]{1,3}\\.){3}[0-9]{1,3}$/)"
          },
          "notify": {
            ".validate": "newData.isBoolean()"
          },
          "email": {
            ".validate": "newData.isString()"
          },
          "website": {
            ".validate": "newData.isString()"
          },
          "$other": {
            ".validate": false
          }
        }
      },
      "tags": {
        ".read": true,
        ".write": false
      }
    },
    "galleries": {
      ".read": true,
      ".write": false
    }
  }
}
